<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".SmsActivity">

    <EditText
        android:id="@+id/etNomorTujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone No ex: 081382393xxx"
        />

    <EditText
        android:id="@+id/etBodySMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your message here"
        android:inputType="textImeMultiLine"
        android:lines="5"
        />

    <Button
        android:id="@+id/btnSMSLangsung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kriim SMS Langsung"
        />


    <Button
        android:id="@+id/btnSMSAplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kriim SMS Dengan Aplikasi"
        />

</LinearLayout>